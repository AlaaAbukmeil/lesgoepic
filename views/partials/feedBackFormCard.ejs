<div class="card card-form">
  <center>
    <h1>Feedback Form</h1>
  </center>
  <div class="card-body">
    <p class="formNotes">We have created this form for you to tell us how you feel about our events/website/videos/policies/etc. Please note that this form is completely anonymous and the answers to this feedback form will never be shared with anyone but organizers to reflect upon and improve.</p>
    <form class="" name="feedback" id="feedback">
      <input type="text" name="feedback" value="" class="feedback" placeholder="We appreciate you!" required>
            <button class="btn btn_get btn_get_two feedbackButton" type="submit">Submit!</button>
    </form>
  </div>
  <div class="content" id="feedbackResponse">
  <h2 class="text_shadows afterSubmitText">Thank you for sharing your thoughts with us ❤️!</h2>
</div>
</div>
<script type="text/javascript">
  const scriptURL = "https://script.google.com/macros/s/AKfycbw_p2ngz9Rd0mkgXaEVcowWsuaV5x4FxN2zO-Vkr8f4UVY34rspiK8X1I1F6cdtixu8/exec"
  const formMasterList = document.forms['feedback']

  formMasterList.addEventListener('submit', e => {
    e.preventDefault()
    fetch(scriptURL, {
        method: 'POST',
        body: new FormData(formMasterList)
      })
      .then(response => console.log("success"))
      .catch(error => console.log("error"))
    document.getElementById("feedback").style.display = "none"
    document.getElementById("feedbackResponse").style.display = "block"
  })
</script>
